<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.dbstarll.parent</groupId>
        <artifactId>PARENT</artifactId>
        <version>1.0</version>
    </parent>
    <artifactId>pure</artifactId>
    <packaging>pom</packaging>

    <scm>
        <connection>scm:git:${project.github.git.root}/${project.artifactId}</connection>
        <developerConnection>scm:git:${project.github.git.root}/${project.artifactId}</developerConnection>
        <url>${project.github.web.master}/${project.artifactId}</url>
    </scm>

    <distributionManagement>
        <site>
            <id>local</id>
            <url>${project.site.root.project}/${project.artifactId}</url>
        </site>
    </distributionManagement>

    <properties>
        <!-- Global Config -->
        <project.java.version>1.8</project.java.version>

        <!-- GitLab -->
        <project.github.host>github.com</project.github.host>
        <project.github.user>dbstarll</project.github.user>
        <project.github.project>parent</project.github.project>
        <project.github.web.root>https://${project.github.host}/${project.github.user}/${project.github.project}
        </project.github.web.root>
        <project.github.web.master>${project.github.web.root}/tree/main</project.github.web.master>
        <project.github.git.root>git@${project.github.host}:${project.github.user}/${project.github.project}.git
        </project.github.git.root>

        <!-- JDK -->
        <maven.compiler.compilerVersion>${project.java.version}</maven.compiler.compilerVersion>
        <maven.compiler.source>${project.java.version}</maven.compiler.source>
        <maven.compiler.target>${project.java.version}</maven.compiler.target>
        <!-- Report Plugin Version -->
        <version.maven-jar-plugin>3.2.0</version.maven-jar-plugin>
        <version.maven-source-plugin>3.2.1</version.maven-source-plugin>
        <version.maven-javadoc-plugin>3.3.0</version.maven-javadoc-plugin>
        <version.maven-pmd-plugin>3.14.0</version.maven-pmd-plugin>
        <version.maven-checkstyle-plugin>3.1.2</version.maven-checkstyle-plugin>
        <version.checkstyle>8.8</version.checkstyle>
        <version.jdepend-maven-plugin>2.0</version.jdepend-maven-plugin>
        <version.findbugs-maven-plugin>3.0.5</version.findbugs-maven-plugin>
        <version.javancss-maven-plugin>2.1</version.javancss-maven-plugin>
        <version.taglist-maven-plugin>2.4</version.taglist-maven-plugin>
        <version.maven-changelog-plugin>2.3</version.maven-changelog-plugin>
        <!-- Report Plugin Version for Test -->
        <version.cobertura-maven-plugin>2.7</version.cobertura-maven-plugin>
        <version.maven-surefire-report-plugin>2.22.2</version.maven-surefire-report-plugin>
    </properties>

    <profiles>
        <profile>
            <id>site-site</id>
            <activation>
                <file>
                    <exists>src/main/java</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>${version.maven-source-plugin}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>${version.maven-javadoc-plugin}</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-checkstyle-plugin</artifactId>
                        <version>${version.maven-checkstyle-plugin}</version>
                        <dependencies>
                            <dependency>
                                <groupId>com.puppycrawl.tools</groupId>
                                <artifactId>checkstyle</artifactId>
                                <version>${version.checkstyle}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>${version.maven-javadoc-plugin}</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-pmd-plugin</artifactId>
                        <version>${version.maven-pmd-plugin}</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-checkstyle-plugin</artifactId>
                        <version>${version.maven-checkstyle-plugin}</version>
                        <configuration>
                            <configLocation>https://static.y1cloud.com/ci/google_checks.xml</configLocation>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>jdepend-maven-plugin</artifactId>
                        <version>${version.jdepend-maven-plugin}</version>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>findbugs-maven-plugin</artifactId>
                        <version>${version.findbugs-maven-plugin}</version>
                        <configuration>
                            <threshold>Low</threshold>
                            <effort>Max</effort>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>javancss-maven-plugin</artifactId>
                        <version>${version.javancss-maven-plugin}</version>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>taglist-maven-plugin</artifactId>
                        <version>${version.taglist-maven-plugin}</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-changelog-plugin</artifactId>
                        <version>${version.maven-changelog-plugin}</version>
                        <configuration>
                            <!-- <displayFileDetailUrl>${project.github.web.master}/%FILE%</displayFileDetailUrl> -->
                            <displayFileRevDetailUrl>${project.github.web.root}/blob/%REV%/%FILE%
                            </displayFileRevDetailUrl>
                            <displayChangeSetDetailUrl>${project.github.web.root}/commit/%REV%
                            </displayChangeSetDetailUrl>
                        </configuration>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
        <profile>
            <id>jar-test-jar</id>
            <activation>
                <file>
                    <exists>src/test/java</exists>
                </file>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-jar-plugin</artifactId>
                            <version>${version.maven-jar-plugin}</version>
                            <executions>
                                <execution>
                                    <goals>
                                        <goal>test-jar</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-source-plugin</artifactId>
                            <version>${version.maven-source-plugin}</version>
                            <executions>
                                <execution>
                                    <goals>
                                        <goal>test-jar-no-fork</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                        <plugin>
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-javadoc-plugin</artifactId>
                            <version>${version.maven-javadoc-plugin}</version>
                            <executions>
                                <execution>
                                    <goals>
                                        <goal>test-jar</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
            <reporting>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>cobertura-maven-plugin</artifactId>
                        <version>${version.cobertura-maven-plugin}</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-report-plugin</artifactId>
                        <version>${version.maven-surefire-report-plugin}</version>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
    </profiles>
</project>
